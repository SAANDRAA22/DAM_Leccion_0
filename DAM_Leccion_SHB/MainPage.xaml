<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DAM_Leccion_SHB.MainPage">

    <ScrollView>
        <VerticalStackLayout
            
            Padding="30,0"
            Spacing="25">
            <Image
                Source="sandra1.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

            <!--<Label
                Text="Hello, World!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" /> -->

            <!--<Label
                Text="Welcome to &#10;.NET Multi-platform App UI"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" /> -->
            
            <Label Text="Sandra Hernandez Badillo "
               FontSize="24"
               TextColor="White"
               HorizontalOptions="Center"
               Margin="10"/>


            <Button
                x:Name="CounterBtn"
                Text="Click me" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            
            <Entry
                x:Name="txtApellido"
                Placeholder="Ingrese su nombre "
                Text="{Binding Nombre, Source={StaticResource persona}}" />
            <Entry
                x:Name="txtEdad"
                Placeholder="Ingrese su Apellido "
                Text="{Binding Apellido, Source={StaticResource persona}}" />
            <Entry
                x:Name="txtNombre"
                Placeholder="Ingrese su Edad "
                Text="{Binding Edad, Source={StaticResource persona}}" />

            <!--<Entry                x:Name="txtContrasena"
                Placeholder="Ingrese su contraseña"
                IsPassword="True" /> -->

            <Button
                x:Name="btnAceptar"
                Clicked="btnAceptar_Clicked"
                HorizontalOptions="CenterAndExpand"
                Text="ACEPTAR"/>
            <!-- Logo -->
            <!--<Image Source="sandra1.png" WidthRequest="200" HeightRequest="200" /> -->

            <!-- Nombre debajo del logo -->
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>